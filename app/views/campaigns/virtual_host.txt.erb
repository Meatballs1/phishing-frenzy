#<!--start <%= @campaign_id %>-->
<VirtualHost *:80>
    ServerName <%= @fqdn %>
    ServerAlias <%= @fqdn %>
    DocumentRoot <%= @template_location %>
    DirectoryIndex <%= @directory_index %>
    CustomLog     <%= @approot %>/log/www-campaign-<%= @campaign_id %>-access.log combined
    ErrorLog      <%= @approot %>/log/www-campaign-<%= @campaign_id %>-error.log

<% if GlobalSettings.first.site_url.downcase.include?('https://') %>
    SSLProxyEngine On
    SSLProxyCheckPeerCN off
    SSLProxyCheckPeerExpire off
<% end %>

    ProxyRequests Off
    ProxyPreserveHost Off
    ProxyPass /reports/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_email/<%= @campaign_id %>
    ProxyPassReverse /reports/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_email/<%= @campaign_id %>
    ProxyPass /api/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_macro/<%= @campaign_id %>
    ProxyPassReverse /api/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_macro/<%= @campaign_id %>
    ProxyPass /cache/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_document/<%= @campaign_id %>
    ProxyPassReverse /cache/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_document/<%= @campaign_id %>
    ProxyPass /style/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_payload/<%= @campaign_id %>
    ProxyPassReverse /style/image <%= GlobalSettings.first.site_url %>/site_delivery/tracking_image_payload/<%= @campaign_id %>
    ProxyPass / <%= GlobalSettings.first.site_url %>/site_delivery/view/<%= @campaign_id %>/
    ProxyPassReverse / <%= GlobalSettings.first.site_url %>/site_delivery/view/<%= @campaign_id %>/

</VirtualHost>
#<!--end <%= @campaign_id %>-->
